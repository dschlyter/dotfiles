#!/usr/bin/env python3
# coding=utf-8

import argparse
import csv
import json
import sys
from os import path

description="""Converts a csv-file (with header) to json"""


def parse_args():
    parser = argparse.ArgumentParser(description=description)
    parser.add_argument('file',
            help='file to convert')
    return parser.parse_args()


def main():
    if sys.version_info[0] < 3:
        raise Exception("Must be using Python 3")

    args = parse_args()

    with open(args.file, 'r') as csvfile:
        lines = csv_read_lines(csvfile)

    header = lines[0]

    res = []
    for line in lines[1:]:
        entry = {}
        if len(line) > len(header):
            print("Line", line, "has more entries than header")
            sys.exit(1)
        for i in range(len(line)):
            entry[header[i]] = line[i]
        res.append(entry)

    csv_basename = path.splitext(path.basename(args.file))[0]
    save_json(csv_basename+".json", res)


def csv_read_lines(file):
    reader = csv.reader(file, delimiter=',')
    lines = []
    for line in reader:
        if len(line) > 0:
            lines.append(line)
    return lines


def save_json(path, data):
    with open(path, 'w') as data_file:
        json.dump(data, data_file, indent=2)


if __name__ == '__main__':
    main()
